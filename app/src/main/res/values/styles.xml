<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
<!--    style for main_header-->
    <style name="header_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorTheme</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>
<!--    style for circle-->
    <style name="circle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/circle</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
<!--    style for box-->
    <style name="workout_box" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/workout_box</item>
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">8dp</item>

    </style>
    <!--    style for exercise box-->
    <style name="exercise_box" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/exercise_box</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">8dp</item>

    </style>
    <!--    style for btn theme-->
    <style name="btn_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/theme_btn_shap</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="exercise_textview_title" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="exercise_textview_value" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="red_button" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/theme_btn_shap</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">#4E4558</item>
        <item name="android:progressTint">@color/colorTheme</item>
        <item name="android:minWidth">200dp</item>
    </style>
</resources>

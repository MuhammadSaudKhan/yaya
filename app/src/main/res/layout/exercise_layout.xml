<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ln"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:weightSum="3"
        style="@style/exercise_box">
        <ImageView
            android:src="@drawable/workout"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_weight="0.5"/>
            <TextView
                android:layout_weight="2"
                android:id="@+id/title"
                android:text="exercise C2"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:paddingLeft="30dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />
            <ImageView
                android:layout_weight="0.5"
                android:id="@+id/editExercise"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/ln"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Series"
                style="@style/exercise_textview_title"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/series"
                android:text="2"
                style="@style/exercise_textview_value"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                style="@style/exercise_textview_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Repetitions" />

            <TextView
                android:id="@+id/repetition"
                style="@style/exercise_textview_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textAlignment="textEnd" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/exercise_textview_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rhythm" />

            <TextView
                android:id="@+id/Rhythm"
                style="@style/exercise_textview_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Normal"
                android:textAlignment="textEnd" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/exercise_textview_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rest between series" />

            <TextView
                android:id="@+id/rest_series"
                style="@style/exercise_textview_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textAlignment="textEnd" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/exercise_textview_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rest between exercise" />

            <TextView
                android:id="@+id/rest_exercise"
                style="@style/exercise_textview_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textAlignment="textEnd" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>